<!--Hot-->
<div class="container home__section">
    <span class="home__section-title">Chung cư nổi bật nhất</span>
    <p class="home__section-desc">Tổng hợp các chung cư tại Hà Nội, Đà Nẵng, TP Hồ Chí Minh...và cách tỉnh thành khác hot nhất thời điểm hiện tại</p>

    <div class="container home__section-list">
        <div class="carousel-multiple-wrapper">
            <i id="carousel-multiple-control-prev" class="bx bx-chevron-left carousel-multiple-control"></i>
            <ul class="carousel-multiple" data-slide-number="3">
                @foreach (Room room in _roomHots)
                {
                    <li class="carousel-multiple-item">
                        <a href="@Url.Action("ApartmentDetail", "Home", new { slug = room.slug })">
                            <div class="card">
                                <div class="card-img-wrapper">
                                    <img src="~/Content/uploads/@room.imageName" class="card-img-top" alt="@room.imageName">
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title">@room.title</h6>
                                    <span class="card-price">@room.price.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</span>

                                    <div class="card-atrr">
                                        <i class="bx bx-map-pin card-icon"></i>
                                        <span>@room.apartment.address</span>
                                    </div>

                                    <div class="card-atrr">
                                        <i class="bx bx-area card-icon"></i>
                                        <span>@room.area m2</span>
                                    </div>

                                    <div class="card-atrr">
                                        <i class="bx bx-bed card-icon"></i>
                                        <span>@room.bedroomNumber phòng ngủ</span>
                                    </div>

                                    <div class="card-atrr">
                                        <i class="bx bx-bath card-icon"></i>
                                        <span>@room.toletNumber phòng vệ sinh</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
            <i id="carousel-multiple-control-next" class="bx bx-chevron-right carousel-multiple-control"></i>
        </div>
    </div>
</div>
