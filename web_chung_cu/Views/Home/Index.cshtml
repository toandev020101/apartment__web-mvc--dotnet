@using web_chung_cu.Models
@using System.Globalization

@{
    ViewBag.Title = "Aparetment";
    <link rel="stylesheet" href="@Url.Content("~/Content/css/home.css")" />

    List<Room> _roomHots = ViewData["roomHots"] != null ? (List<Room>)ViewData["roomHots"] : new List<Room>();
    List<Room> _roomNews = ViewData["roomNews"] != null ? (List<Room>)ViewData["roomNews"] : new List<Room>();
